<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="#0B0B0F">

    <!-- CARD MAP (MAP + INFOS + FAVORIS + RECHERCHE) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.60"
        app:cardBackgroundColor="#181A20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- MAP -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/map_fragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#000000" />

            <!-- INFOS TRAJET -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_trip_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#22252F">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_trip_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- min"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tv_trip_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- km"
                            android:textSize="13sp"
                            android:textColor="#B0BEC5"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btn_save_favorite"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/btn_star_big_off"
                        android:background="?selectableItemBackgroundBorderless"
                        app:tint="#FFC107"
                        android:layout_marginEnd="4dp"/>

                    <ImageButton
                        android:id="@+id/btn_clear_route"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:background="?selectableItemBackgroundBorderless"
                        app:tint="#FF5252"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- FAVORIS -->
            <LinearLayout
                android:id="@+id/favorites_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#20232B"
                android:padding="6dp"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageButton
                    android:id="@+id/btn_home"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    app:tint="#4CAF50"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_marginEnd="4dp"/>

                <ImageButton
                    android:id="@+id/btn_work"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_agenda"
                    app:tint="#42A5F5"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_marginEnd="4dp"/>

                <ImageButton
                    android:id="@+id/btn_save_current"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_add"
                    app:tint="#00BCD4"
                    android:background="?selectableItemBackground"
                    android:contentDescription="Sauvegarder position actuelle"
                    android:layout_marginEnd="8dp"/>

                <Spinner
                    android:id="@+id/spinner_favorites"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"
                    android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"/>

                <ImageButton
                    android:id="@+id/btn_manage_favorites"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_delete"
                    app:tint="#EF5350"
                    android:background="?selectableItemBackgroundBorderless"/>

                <ImageButton
                    android:id="@+id/btn_update_favorites"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_upload"
                    app:tint="#EF5350"
                    android:background="?selectableItemBackgroundBorderless"/>
            </LinearLayout>

            <!-- RECHERCHE -->
            <LinearLayout
                android:id="@+id/search_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="6dp"
                android:background="#252935"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Entrer une adresse..."
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#9FA8DA"
                    android:background="@android:color/transparent"
                    android:inputType="textPostalAddress"
                    android:maxLines="1"/>

                <Button
                    android:id="@+id/btn_search_go"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="GO"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:backgroundTint="#448AFF"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CARD DATA PANEL (OBD) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_data_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/card_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="#151821">

        <!-- Petit “glow” cockpit -->
        <LinearLayout
            android:id="@+id/data_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/bg_obd_gradient">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/grid_obd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:alignmentMode="alignMargins"
                app:useDefaultMargins="true"
                app:columnCount="2"
                app:rowCount="2">

                <!-- CASE 1 : VITESSE -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_row="0"
                    app:layout_column="0"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="#151821"
                    android:clipToOutline="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vitesse"
                        android:textColor="#B0BEC5"
                        android:textSize="12sp"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:id="@+id/tv_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#76FF03"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km/h"
                        android:textColor="#CFD8DC"
                        android:textSize="13sp"/>
                </LinearLayout>

                <!-- CASE 2 : RPM -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_row="0"
                    app:layout_column="1"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="#151821"
                    android:clipToOutline="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Régime moteur"
                        android:textColor="#B0BEC5"
                        android:textSize="12sp"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:id="@+id/tv_rpm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FF9100"
                        android:textSize="28sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RPM"
                        android:textColor="#CFD8DC"
                        android:textSize="13sp"/>
                </LinearLayout>

                <!-- CASE 3 : DATA 1 (ex: Temp moteur) -->
                <LinearLayout
                    android:id="@+id/container_data_1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_row="1"
                    app:layout_column="0"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="#151821"
                    android:clipToOutline="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Conso moyenne"
                        android:textColor="#B0BEC5"
                        android:textSize="12sp"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:id="@+id/tv_data_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="#81D4FA"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L/100"
                        android:textColor="#CFD8DC"
                        android:textSize="13sp"/>
                </LinearLayout>

                <!-- CASE 4 : DATA 2 (ex: Batterie) -->
                <LinearLayout
                    android:id="@+id/container_data_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_row="1"
                    app:layout_column="1"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="#151821"
                    android:clipToOutline="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autonomie estimée"
                        android:textColor="#B0BEC5"
                        android:textSize="12sp"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:id="@+id/tv_data_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="#B39DDB"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:textColor="#CFD8DC"
                        android:textSize="13sp"/>
                </LinearLayout>

            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
