<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="#121212">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.60"
        app:cardBackgroundColor="#181A20">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <!-- MAP (plein Ã©cran dans la CardView) -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/map_fragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/search_container" />

            <LinearLayout
                android:id="@+id/search_and_trip_info_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/bg_rounded_white_80"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <!-- LOUPE + CHAMP DE RECHERCHE -->
                <ImageButton
                    android:id="@+id/btn_search"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_search_category_default"
                    android:background="?selectableItemBackgroundBorderless" />

            </LinearLayout>

            <!-- INFOS TRAJET (masquÃ© par dÃ©faut) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_trip_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:clipToPadding="false"
                android:padding="12dp"
                android:visibility="gone"
                app:cardBackgroundColor="#B3FFFFFF"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/search_container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:src="@drawable/ic_time"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:id="@+id/tv_trip_time"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:text="--"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:src="@drawable/ic_route"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:id="@+id/tv_trip_distance"
                            android:textSize="16sp"
                            android:text="--"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end|center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:src="@drawable/ic_pin"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:id="@+id/tv_trip_end"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:text="--"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- BOUTONS FAVORIS (en haut Ã  droite, superposÃ©s verticalement) -->
            <LinearLayout
                android:id="@+id/favorites_buttons_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp"
                android:background="@drawable/bg_rounded_white_80"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Bouton "Mes Favoris" -->
                <Button
                    android:id="@+id/btn_open_favorites"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="ðŸ“‚"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:backgroundTint="#555555"
                    style="@style/Widget.MaterialComponents.Button.Icon" />

                <!-- Bouton "+" pour sauvegarder la position actuelle -->
                <ImageButton
                    android:id="@+id/btn_save_current"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:src="@android:drawable/ic_menu_add"
                    app:tint="#00BCD4"
                    android:background="?selectableItemBackgroundBorderless" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#333333"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Adresse..."
                    android:textColor="#FFF"
                    android:textColorHint="#AAA"
                    android:backgroundTint="#FFF"
                    android:maxLines="1"/>
                <Button
                    android:id="@+id/btn_search_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GO"
                    android:backgroundTint="#2196F3"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_data_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/card_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="#151821">

        <!-- Petit â€œglowâ€ cockpit -->
        <LinearLayout
            android:id="@+id/data_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/bg_obd_gradient">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/grid_obd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:alignmentMode="alignMargins"
                app:useDefaultMargins="true"
                app:columnCount="2"
                app:rowCount="2">

                <!-- CASE 1 : VITESSE -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_row="0"
                    app:layout_column="0"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="#151821"
                    android:clipToOutline="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vitesse"
                        android:textColor="#B0BEC5"
                        android:textSize="12sp"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:id="@+id/tv_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#76FF03"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km/h"
                        android:textColor="#CFD8DC"
                        android:textSize="13sp"/>
                </LinearLayout>

                <!-- CASE 2 : RPM -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_row="0"
                    app:layout_column="1"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="#151821"
                    android:clipToOutline="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RÃ©gime moteur"
                        android:textColor="#B0BEC5"
                        android:textSize="12sp"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:id="@+id/tv_rpm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FF9100"
                        android:textSize="28sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RPM"
                        android:textColor="#CFD8DC"
                        android:textSize="13sp"/>
                </LinearLayout>

                <!-- CASE 3 : DATA 1 (ex: Temp moteur) -->
                <LinearLayout
                    android:id="@+id/container_data_1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_row="1"
                    app:layout_column="0"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="#151821"
                    android:clipToOutline="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Conso moyenne"
                        android:textColor="#B0BEC5"
                        android:textSize="12sp"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:id="@+id/tv_data_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="#81D4FA"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L/100"
                        android:textColor="#CFD8DC"
                        android:textSize="13sp"/>
                </LinearLayout>

                <!-- CASE 4 : DATA 2 (ex: Batterie) -->
                <LinearLayout
                    android:id="@+id/container_data_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_row="1"
                    app:layout_column="1"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="#151821"
                    android:clipToOutline="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autonomie estimÃ©e"
                        android:textColor="#B0BEC5"
                        android:textSize="12sp"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:id="@+id/tv_data_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="#B39DDB"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:textColor="#CFD8DC"
                        android:textSize="13sp"/>
                </LinearLayout>

            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>